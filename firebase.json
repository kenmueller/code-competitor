{
	"hosting": {
		"public": "public/out",
		"ignore": [
			"firebase.json",
			"**/.*",
			"**/node_modules/**"
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/404.html"
			}
		],
		"headers": [
			{
				"source": "**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=86400, s-maxage=86400"
					}
				]
			},
			{
				"source": "/_next/static/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, s-maxage=31536000"
					}
				]
			}
		],
		"cleanUrls": true,
		"trailingSlash": false
	}
}
